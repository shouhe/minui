<template>
  <view class="switch switch--{{ checked ? 'on' : 'off' }} switch--{{ disabled ? 'disabled' : '' }}" bindtap="switch" style="background: {{activeColor}}; border: 3rpx solid {{activeColor}};">
    <view class="switch__btn"></view>
    <view class="switch__bg"></view>
  </view>
</template>

<script>
export default {
  config: {
    usingComponents: {}
  },
  behaviors: [],
  properties: {
    checked: {
      type: Boolean,
      value: false
    },
    disabled: {
      type: Boolean,
      value: false
    },
    activeColor: {
      type: String,
      value: '#ff5777'
    }
  },
  data: {},
  methods: {
    switch: function() {
      let data = this.data;
      let checked = data.checked;
      let loading = data.loading;
      let disabled = data.disabled;

      if (loading || disabled) return false;

      this.setData({
        checked: !checked
      });

      this.triggerEvent('switch', {
        checked: this.data.checked
      });
    }
  }
}


</script>

